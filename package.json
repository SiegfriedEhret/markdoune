{
  "name": "markdoune",
  "version": "5.0.0",
  "description": "A small plugin to add markdown capabilities to textarea.",
  "scripts": {
    "build": "rollup -c && npm run tsd",
    "tsd": "tsc -p src/ --emitDeclarationOnly",
    "format": "prettier --write src/**/*.{ts,json}",
    "test": "cypress run",
    "test:cypress:open": "cypress open"
  },
  "main": "./markdoune.js",
  "types": "./types/index.d.ts",
  "author": {
    "name": "Siegfried Ehret",
    "email": "siegfried@ehret.me"
  },
  "homepage": "https://gitlab.com/SiegfriedEhret/markdoune",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:SiegfriedEhret/markdoune.git"
  },
  "bugs": {
    "url": "https://gitlab.com/SiegfriedEhret/markdoune/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "cypress": "^3.6.1",
    "prettier": "^1.19.1",
    "rollup": "^1.27.0",
    "rollup-plugin-typescript": "^1.0.1",
    "tslib": "^1.10.0",
    "typescript": "^3.7.2"
  }
}
